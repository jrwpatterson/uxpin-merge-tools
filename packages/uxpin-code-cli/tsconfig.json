{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015", "es2016.array.include", "dom"],
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "./",
    "jsx": "react",
    "pretty": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "test/types/*"
      ]
    }
  },
  "exclude": [
    "test/resources/**",
    "node_modules/"
  ]
}
